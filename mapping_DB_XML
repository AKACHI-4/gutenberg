           node=marcrel:com/pgterms:agent/pgterms:name before the comma
first_name: node=dcterms:creator/pgterms:agent/pgterms:name after the comma
            node=marcrel:com/pgterms:agent/pgterms:name after the comma
birth_date: node=marcrel:com/pgterms:agent/pgterms:birthdate
